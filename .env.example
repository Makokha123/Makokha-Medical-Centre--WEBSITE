# Application mode
APP_ENV=production
FLASK_DEBUG=false
AUTO_INIT_DB=false

# Core security
SECRET_KEY=replace-with-long-random-secret
SESSION_LIFETIME_HOURS=12
SOCKETIO_CORS_ALLOWED_ORIGINS=https://your-app-name.onrender.com

# PostgreSQL (Render managed database URL)
DATABASE_URL=postgresql://username:password@host:5432/database_name
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=280

# Required admin bootstrap account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace-with-strong-password
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=System Administrator

# Keepalive secret for /health and /db-keepalive cron calls
CRON_SECRET=replace-with-random-cron-secret

# Resend email service for patient/reception email notifications
RESEND_API_KEY=
RESEND_FROM_EMAIL=no-reply@your-domain.com
RESEND_REPLY_TO=
RESEND_TIMEOUT_SECONDS=20

# Optional real-time voice relay config
TURN_SERVER_URLS=
TURN_USERNAME=
TURN_CREDENTIAL=
STUN_SERVER_URLS=stun:stun.l.google.com:19302
